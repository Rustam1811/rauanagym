rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return request.auth != null &&
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isValidImageSize() {
      return request.resource.size < 10 * 1024 * 1024; // 10MB
    }
    
    function isValidVideoSize() {
      return request.resource.size < 100 * 1024 * 1024; // 100MB
    }
    
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    function isVideo() {
      return request.resource.contentType.matches('video/.*');
    }
    
    // Exercise videos - admin upload only, all authenticated can read
    match /exercises/{exerciseId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() && isVideo() && isValidVideoSize();
    }
    
    // Story media - admin upload only, all authenticated can read
    match /stories/{storyId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() && (isImage() || isVideo()) && 
                     (isValidImageSize() || isValidVideoSize());
    }
    
    // User avatars - users can upload their own only
    match /users/{userId}/avatar/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if request.auth.uid == userId && isImage() && isValidImageSize();
    }
    
    // User progress photos - users can upload their own only
    match /users/{userId}/progress/{allPaths=**} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow write: if request.auth.uid == userId && isImage() && isValidImageSize();
    }
  }
}
