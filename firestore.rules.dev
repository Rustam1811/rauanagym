rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Временные правила для разработки
    // ВНИМАНИЕ: Эти правила дают полный доступ всем авторизованным пользователям
    // Замените на production правила перед публикацией!
    
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
